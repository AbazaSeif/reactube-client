{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "compilerOptions": {
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "rules": {
    "no-unused-variable": true,
    "no-empty-interface": false,
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}